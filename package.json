{
  "name": "doem",
  "version": "1.0.0",
  "description": "todo application with local storage",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "build:css": "tailwindcss -i src/input.css -o src/output.css",
    "create-dist": "mkdir -p dist",
    "copy-html": "cp src/index.html dist/index.html",
    "copy-css": "cp src/output.css dist/output.css",
    "build": "npm run build:css && npm run create-dist && npm run copy-html && npm run copy-css",
    "deploy": "gh-pages -d dist",
    "start": "node index.js",
    "dev": "nodemon index.js",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "autoprefixer": "^10.4.20",
    "gh-pages": "^6.3.0",
    "nodemon": "^3.1.9",
    "postcss": "^8.4.49",
    "tailwindcss": "^3.4.17"
  }
}
